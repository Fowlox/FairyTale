<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/puzzle_outLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/puzzle_line_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/puzzle_background_color_2"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="@color/White"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/White"
                    android:gravity="center_horizontal|bottom" >

                    <LinearLayout
                        android:id="@+id/puzzle_1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/puzzle_1_background"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/puzzle_2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/puzzle_2_background"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/puzzle_3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/puzzle_3_background"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="@color/White"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/puzzle_line_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/puzzle_background_color_2"
                android:gravity="center_horizontal|top"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="@color/White"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/White" >

                    <LinearLayout
                        android:id="@+id/puzzle_4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/puzzle_4_background"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/puzzle_5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/puzzle_5_background"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/puzzle_6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/puzzle_6_background"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="@color/White"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/puzzle_outLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/puzzle_background_color"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/puzzle_imageView3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/puzzle_3" />

            <ImageView
                android:id="@+id/puzzle_imageView5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/puzzle_5" />

            <ImageView
                android:id="@+id/puzzle_imageView1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/puzzle_1" />

            <ImageView
                android:id="@+id/puzzle_imageView4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/puzzle_4" />

            <ImageView
                android:id="@+id/puzzle_imageView2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/puzzle_2" />

            <ImageView
                android:id="@+id/puzzle_imageView6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/puzzle_6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>