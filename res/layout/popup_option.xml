<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/optionPopup"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_gravity="center"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:background="@drawable/popup"
    tools:context=".MainOptionPopup">

    <ImageButton
        android:onClick="onClick"
        android:id="@+id/x_close_btn"
        android:background="@drawable/x_close_btn_sel"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_weight="0.15"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:text="BGM"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.5"/>

            <ImageButton
                android:id="@+id/bgm_switch"
                android:background="@drawable/bgm_switch_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:onClick="onClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:text="NARR"
                android:textColor="@android:color/black"
                android:layout_marginBottom="30dp"
                android:layout_weight="0.5"/>

            <ImageButton
                android:id="@+id/narr_switch"
                android:background="@drawable/narr_switch_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:onClick="onClick"/>
        </LinearLayout>

    </LinearLayout>
    <!--<LinearLayout-->
    <!--android:layout_weight="0.1"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"/>-->
</LinearLayout>